#include <iostream>
#include <cmath>
#include <limits>
using namespace std;


//1. Пользователь заполняет массив int array[10]. Вывести в консоль наибольшее и наименьшее значение массива.
int max_of_array(){
    int max = numeric_limits<int>::min();
    int array[10];
    for(int i = 0; i < (sizeof(array)/sizeof(int)); i++){
        do{
         cout<<"Введите значение элемента массива "<<i<<": ";
         cin>>array[i];
            if(cin.fail()){
            cout<<"Некорректное значение элемента массива"<<endl;
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(),'\n');   
         } 
         else{
            if(max < array[i]){
                max = array[i];
            }
            break;
         }
    }while(true);
  }
  cout<<"Максимальное значение массива: "<<max<<endl;
  return 0;
}

int main(){
    max_of_array();
}
