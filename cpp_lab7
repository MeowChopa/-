#include<iostream>
#include<cmath>
#include<string>

using namespace std;

string type_stringi(){
    string x = " ";

    cout<<"Введите строку: ";
    cin>>x;

    return x;
}
int type_of(){
    int x = 0;
    do{
    cout<<"Введите значение переменной: ";
    cin>>x;

    if(cin.fail() || x <= 0){
        cout<<"Введено некорректное значение"<<endl;
        cin.clear();
        cin.ignore(numeric_limits<streamsize>::max(),'\n');
    }
    else{ break;}
    }while(true);

    return x;
}

class Student{

    public:
    string name;
    string second_name;
    int count_of_scores;
    int* scores = new int[count_of_scores];

    void AverageScore(){
        int final_score = 0;
        for(int i = 0; i < count_of_scores; i++){
            final_score += scores[i];
        }
        final_score = final_score/count_of_scores;
        cout<<"Средний балл: " + to_string(final_score)<<endl;
    }

};


int main(){
    setlocale(LC_ALL, "RU");
    Student stud;

    cout<<"Имя:"<<endl;
    stud.name = type_stringi();

    cout<<"Фамилия"<<endl;
    stud.second_name = type_stringi();

    cout<<"Кол-во отметок"<<endl;
    stud.count_of_scores = type_of();

    for(int i = 0; i < stud.count_of_scores; i++){

        cout<<"Оценка под номером " + to_string((i+1))<<endl;
        stud.scores[i] = type_of();

    }

    stud.AverageScore();
    return 0;
}
